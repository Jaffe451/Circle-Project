<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.jaffe.circlepoject.MainMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/mmLevelSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level Select" />

        <Button
            android:id="@+id/mmLevelCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level Creator" />

        <Button
            android:id="@+id/mmPogCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pog Creator" />

        <Button
            android:id="@+id/mmHighScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Scores" />

        <Button
            android:id="@+id/mmOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Options" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help" />


    </LinearLayout>

</FrameLayout>
