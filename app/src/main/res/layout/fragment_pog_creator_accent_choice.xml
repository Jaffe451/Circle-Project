<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pogCreatorAccentChoice">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6">

            <ImageButton
                android:id="@+id/pogCreatorAccentUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight=".3"
                android:src="@drawable/undo"
                android:textSize="30sp" />

            <FrameLayout
                android:id="@+id/pogCreatorAccentDisp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

            </FrameLayout>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alignmentMode="alignBounds"
                    android:columnCount="4"
                    android:scrollbars="vertical">

                    <ImageButton
                        android:id="@+id/circleAB"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/circleicon" />

                    <ImageButton
                        android:id="@+id/circleAW"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/circleicon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/squareAB"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/squareicon" />

                    <ImageButton
                        android:id="@+id/heartAB"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hearticon" />

                    <ImageButton
                        android:id="@+id/squareAW"
                        android:layout_width="0dp"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/squareicon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/hourglassAB"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hourglassicon" />

                    <ImageButton
                        android:id="@+id/heartAW"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hearticon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/hexaAB"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hexagonicon" />

                    <ImageButton
                        android:id="@+id/hexaAW"
                        android:layout_width="0dp"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hexagonicon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/hourglassAW"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hourglassicon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/pentaAB"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/pnetagonicon" />

                    <ImageButton
                        android:id="@+id/pentaAW"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:layout_column="3"
                        android:layout_row="2"
                        android:src="@drawable/pnetagonicon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/starAB"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/staricon" />

                    <ImageButton
                        android:id="@+id/starAW"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:src="@drawable/staricon"
                        android:tint="@android:color/background_light" />

                    <ImageButton
                        android:id="@+id/starsixAB"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/staricon2" />

                    <ImageButton
                        android:id="@+id/starsixAW"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:layout_column="3"
                        android:layout_row="3"
                        android:src="@drawable/staricon2"
                        android:tint="@android:color/background_light" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>