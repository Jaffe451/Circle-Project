<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pogCreatorShapeChoice">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/pogCreatorShapeDisp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"></FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alignmentMode="alignBounds"
                    android:columnCount="4"

                    android:scrollbars="vertical">

                    <ImageButton
                        android:id="@+id/circleS"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/circleicon" />

                    <ImageButton
                        android:id="@+id/squareS"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/squareicon" />

                    <ImageButton
                        android:id="@+id/pentaS"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/pnetagonicon" />

                    <ImageButton
                        android:id="@+id/heartS"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hearticon" />

                    <ImageButton
                        android:id="@+id/hexaS"
                        android:layout_width="0dp"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hexagonicon" />

                    <ImageButton
                        android:id="@+id/hourglassS"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/hourglassicon" />

                    <ImageButton
                        android:id="@+id/diamondS"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/diamondicon" />

                    <ImageButton
                        android:id="@+id/starS"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/staricon" />

                    <ImageButton
                        android:id="@+id/triangleS"
                        android:layout_width="0dp"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/triangleicon" />

                    <ImageButton
                        android:id="@+id/thinkingS"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/thinkingicon" />

                    <ImageButton
                        android:id="@+id/starsixS"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:src="@drawable/staricon2" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>